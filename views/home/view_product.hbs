<script>
$('#form-contact').submit(function (e) {
    e.preventDefault();
    var data = $(this).serialize();
    $.ajax({
        url: '/api/add-new-task',
        type: 'POST',
        data: data,
        dataType: 'json',
        success: function (data) {
            alert('Gửi thành công');
            $('#form-contact')[0].reset();
        },
        error: function (err) {
            console.log(err);
            alert('Gửi thất bại');
        }
    })
})
</script>

</html>