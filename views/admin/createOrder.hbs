<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Trang chủ</title>
    <link rel="icon" type="image/png" sizes="16x16" href"/public/images/favicon.png">
    <link href="/public/plugins/sweetalert/css/sweetalert.css" rel="stylesheet">
    <link href="/public/css/style.css" rel="stylesheet">

</head>

<body>
    {{!-- load --}}
    <div id="preloader" style="background-color: #ffffff80;">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    {{!-- load --}}

    <div id="main-wrapper">

        {{> header }}

        {{> slideBarAdmin }}
        {{> slideBarQL }}
        {{> slideBarNv }}
       
        <div class="content-body">
            <!-- row -->
            
            <div class="container-fluid">
                {{!-- Thông tin tổng quan --}}
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Thêm hóa đơn</h4>
                                <div class="basic-form">
                                    <div id="create-account">
                                        <div class="form-group">
                                            <label>Họ và tên khách hàng</label>
                                            <input type="text" class="form-control" name="name" id="name-kh">
                                        </div>
                                        <div class="form-group">
                                            <label>Số điện thoại</label>
                                            <input type="text" class="form-control" name="phone" id="phone-kh">
                                        </div>
                                        <div class="form-group">
                                            <label>Thêm mặt hàng</label>
                                            <input type="text" class="form-control" id="mathang">
                                            <ul id="list-mat-hang" class="list-group">

                                            </ul>
                                        </div>
                                        <div class="form-group">
                                            <label>Mặt hàng tạm tính</label>
                                            <ul id="list-mat-hang-tam-tinh" class="list-group">

                                            </ul>
                                            <input class="form-control mt-2" id="total-price" type="text" placeholder="Giá tiền" value="Tỉnh Tổng: 0 VND" readonly="readonly">
                                        </div>
                                        <button type="button" class="btn btn-dark" onclick="submitForm()">Thêm hóa đơn</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
            <!-- #/ container -->
        </div>
        
        
    </div>
    
    {{> footer }}
    
    <script src="/public/plugins/sweetalert/js/sweetalert.min.js"></script>
    <script src="/public/plugins/sweetalert/js/sweetalert.init.js"></script>

</body>

<script src="/public/javascript/nhanvien/createOrder.js"></script>

</html>